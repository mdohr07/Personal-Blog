---
import { ViewTransitions } from 'astro:transitions';
import { fade } from 'astro:transitions';

// utils import
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

import '../styles/global.css';

// Site titles and description
const { pageTitle, description } = Astro.props;
const formattedTitle = description ? `${pageTitle} - ${description}` : pageTitle;
---
<Header {pageTitle} {description}/>

        <ViewTransitions />
	<body>
        <main transition:animate={fade({ duration: '0.4s' })} >
	    <slot />
            <Footer />
        </main>

