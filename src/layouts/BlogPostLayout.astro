---
import Layout from './Layout.astro';
import { formatDate } from '../js/formatDate'

import '../styles/global.css';

const pageTitle = "mdohr";
// Site titles, description, etc.

const { frontmatter } = Astro.props;
const { title, description, date, category, author, image } = frontmatter;
---

<Layout {pageTitle} {description} >
    <header>
        <div class="blog-container">
        </div>
        <!-- <img src="" alt=""> -->
    </header>
    
    <!-- Post content -->
    <div class="post-content"> <p>{ formatDate(date) } - <a href={`/category/${category}`} class="badge">{category}</a></p>
        <h1>{title}</h1>
        <div class="content">
            <!-- Blog content goes into slot below -->
            <slot />
            <p>By <a href={`/author/${author}`}>{author}</a></p>

        </div>
        <div class="sidebar"></div>
    </div>
</Layout>
